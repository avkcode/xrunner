{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Bundle",
  "type": "object",
  "required": [
    "schema_version",
    "bundle_version",
    "generated_at",
    "tools"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^20[0-9]{2}-[0-9]{2}-[0-9]{2}$"
    },
    "bundle_version": {
      "type": "string",
      "pattern": "^v[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "tool.schema.json"
      }
    }
  },
  "additionalProperties": false
}
